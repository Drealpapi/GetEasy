{
  "expo": {
    "name": "GetEasy",
    "slug": "geteasy",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a8a60"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.geteasy.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0a8a60"
      },
      "package": "com.geteasy.app"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow GetEasy to access your microphone."
        }
      ]
    ]
  }
}
